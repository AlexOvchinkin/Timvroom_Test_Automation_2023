<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="SeleniumTestingTasks" verbose="1" >
    <test name="ChromeTests" >
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="TestingTasksTests.FirstFourOddTasks" />
            <class name="TestingTasksTests.OtherOddTasks" />
            <class name="TestingTasksTests.FirstFourEvenTasks" />
            <class name="TestingTasksTests.OtherEvenTasks" />
        </classes>
    </test>

    <test name="SafariTests" >
        <parameter name="browser" value="safari"/>
        <classes>
            <class name="TestingTasksTests.FirstFourOddTasks" />
            <class name="TestingTasksTests.OtherOddTasks" />
            <class name="TestingTasksTests.FirstFourEvenTasks" />
            <class name="TestingTasksTests.OtherEvenTasks" />
        </classes>
    </test>
</suite>
